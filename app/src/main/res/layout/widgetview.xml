    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView android:id="@+id/textDate" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textColor="#00ff00" android:background="#000000" android:gravity="center"></TextView>
    <TextView android:id="@+id/textCount" android:layout_width="fill_parent" android:layout_height="wrap_content" android:textColor="#00ff00" android:background="#000000" android:gravity="center"></TextView>
    　　<ImageButton 
		android:id="@+id/btnImageSmake"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:src="@drawable/cigbutton"
		android:gravity="center"
	/>
</LinearLayout>
